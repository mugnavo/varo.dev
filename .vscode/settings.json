{
  // hide misc files that we most likely don't need to see
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.nuxt": true,
    "**/.vercel": true,
    "**/out": true,
    "**/build": true,
    "**/node_modules": true,

    "pnpm-lock.yaml": true
  },

  // always choose typescript from node_modules
  "typescript.tsdk": "./node_modules/typescript/lib",

  // use LF line endings
  "files.eol": "\n",

  // smol performance improvements
  "editor.minimap.renderCharacters": false,

  // set prettier as default formatter for json, ts, tsx, js, jsx, html, css
  "[json][jsonc][typescript][typescriptreact][javascript][javascriptreact][html][css][vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // "html.format.wrapAttributes": "force-expand-multiline",

  // auto-format on save & paste
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true
}
